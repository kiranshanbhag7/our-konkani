<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_category"
    android:layout_width="match_parent"
    android:minHeight="@dimen/setting_item_height"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_mini"
    card_view:cardElevation="2dp"
    card_view:contentPadding="7dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardMaxElevation="2dp">

    <TextView
        android:id="@+id/tv_translation_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_18"
        android:textColor="@color/color_black"
        android:paddingTop="@dimen/margin_mini"
        android:paddingBottom="@dimen/margin_mini"
        android:paddingLeft="@dimen/line_spacing"
        android:paddingRight="@dimen/line_spacing"
        android:paddingStart="@dimen/line_spacing"
        android:paddingEnd="@dimen/line_spacing"
        android:layout_gravity="center"
        android:gravity="center"
        />
</android.support.v7.widget.CardView>